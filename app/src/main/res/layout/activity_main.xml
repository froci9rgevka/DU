<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pea.du.actyvities.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:clickable="true"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:title="@string/defect_toolbar_title"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp"/>
            <Button
                    android:text="ДЕФЕКТАЦИЯ"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.00"
                    android:background="@color/colorDefectButton"
                    android:id="@+id/activity_main_bDefect"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1.00">
                <Button
                        android:text="ЭТАПЫ РАБОТ"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/holo_blue_dark"
                        android:id="@+id/activity_main_bStage_Work"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1">
                    <Button
                            android:text="НАЧАЛО"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_dark"
                            android:id="@+id/activity_main_bBegin_Stage"/>
                    <Button
                            android:text="ВЫПОЛНЕНИЕ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_light"
                            android:id="@+id/activity_main_bDuring_Stage"/>
                    <Button
                            android:text="ЗАВЕРШЕНИЕ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorEndButton"
                            android:id="@+id/activity_main_bEnd_Stage"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
                android:id="@+id/menuProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                style="@android:style/Widget.ProgressBar.Large"
                android:indeterminate="false"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
