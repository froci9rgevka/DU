<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actyvities.defects.address.act.photo.PhotoLibraryItem">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="368dp"
                  android:layout_height="100dp"
                  android:orientation="horizontal"
                  android:padding="5dp" android:background="@android:color/darker_gray"
                  tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="8dp" android:weightSum="1">

        <ImageView
                android:id="@+id/grid_item_image"
                android:layout_height="100dp"
                android:scaleType="fitStart" android:layout_width="130dp"/>

        <TextView
                android:id="@+id/grid_item_title"
                android:layout_width="170dp"
                android:layout_height="88dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:textSize="14sp" android:textStyle="bold" android:textAlignment="center"
        />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
