<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        tools:context=".actyvities.defects.address.act.photo.PhotoLibrary">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" android:weightSum="1">

        <android.support.v7.widget.Toolbar
                android:id="@+id/photo_library_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:clickable="true"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="@string/defect_toolbar_title"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" android:layout_weight="1"/>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:background="#f0f0f0" android:layout_height="378dp">

            <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="100dp"
                    android:drawSelectorOnTop="true"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp"
                    android:focusable="true"
                    android:clickable="true" android:background="@android:color/darker_gray"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>

        </RelativeLayout>

        <TextView
                android:text="Количество отправленных пакетов"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvPocketsCount" android:layout_weight="1"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pbSendPhoto" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="10.65">
            <Button
                    android:text="Добавить"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/photo_library_add"
                    android:layout_weight="0.18" android:onClick="onAddClick"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
